{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2016", "dom"],
        "module": "es2015",
        "moduleResolution": "node",
        "jsx": "react",
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "types": [],
        "experimentalDecorators": true,
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types"
            //,"Types"
        ]
    },
    "include": [
        "js/src/**/*.ts",
        "js/src/**/*.tsx",
        "**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}